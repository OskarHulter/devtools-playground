{
  "extends": "@sln/tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["/*"],
      "@/*": ["./src/*"],
      "@sln/lib": ["../../lib"],
      "@sln/lib/*": ["../../lib/*"],
      "@sln/features": ["../../features"],
      "@sln/features/*": ["../../features/*"],
      "@sln/prisma": ["../../prisma"],
      "@sln/dayjs": ["../../dayjs"],
      "@sln/prisma/*": ["../../prisma/*"],
      "@sln/dayjs/*": ["../../dayjs/*"],
      "@sln/platform-constants": ["../constants/index.ts"],
      "@sln/platform-types": ["../types/index.ts"],
      "@sln/platform-utils": ["../constants/index.ts"],
      "@sln/trpc": ["../../trpc"],
      "@sln/app-store": ["../../app-store"],
      "@sln/app-store/*": ["../../app-store/*"],
      "@sln/trpc/*": ["../../trpc/*"]
    },
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": [
    ".",
    "../../types/next-auth.d.ts",
    "../../types/next.d.ts",
    "../../types/@wojtekmaj__react-daterange-picker.d.ts",
    "../../types/business-days-plugin.d.ts",
    "../../types/window.d.ts",
    "../../lib",
    "../../features",
    "../types",
    "../constants",
    "../utils",
    "../libraries",
    "../../prisma",
    "../../dayjs",
    "../../trpc",
    "../../app-store"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*WebWrapper.tsx",
    "**/*.docs.mdx",
    "**/*.stories.tsx",
    "monorepo.ts",
    "booker/export.ts",
    "booker/index.ts"
  ]
}
